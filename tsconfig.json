{
  "compilerOptions": {
    "target": "esnext",
    "noImplicitAny": false,
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["vue/ref-macros", "vite/client", "node"],
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
